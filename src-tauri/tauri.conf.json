{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Terminal Template",
  "version": "0.1.0",
  "identifier": "com.tauri.terminal.template",
  "build": {
    "beforeDevCommand": "npm run dev:vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Terminal Template",
        "width": 1024,
        "height": 768,
        "minWidth": 400,
        "minHeight": 300,
        "decorations": false,
        "backgroundColor": [30, 30, 38, 255]
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1",
          "librsvg2-2",
          "libxdo3",
          "libssl3"
        ]
      },
      "rpm": {
        "depends": [
          "webkit2gtk4.1",
          "gtk3",
          "libappindicator-gtk3",
          "librsvg2",
          "libxdo",
          "openssl"
        ]
      }
    }
  }
}
